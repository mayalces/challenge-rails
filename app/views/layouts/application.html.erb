<!DOCTYPE html>
<html>
  <head>
    <title>ChallengeRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <h1>Challenge Rails</h1>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Profiles", new_profile_path %></li>
            <li><%= link_to "Reports", reports_path %></li>
            <li><%= link_to "External Report", external_reports_path %></li>
          </ul>
        </div>
      </nav>
    </header>

    <section class="container">
      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash alert <%= alert_class(key) %>"><%= value %></div>
        <% end %>
      </div>

      <%= yield %>
    </section>
  </body>
</html>
